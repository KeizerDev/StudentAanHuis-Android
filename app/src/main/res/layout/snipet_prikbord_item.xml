<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="10dp"
    android:paddingTop="10dp"
    android:gravity="center_vertical">
    <Space
        android:layout_width="35dp"
        android:layout_height="match_parent" />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="fill_horizontal"
            android:text="Locatie"
            android:id="@+id/prikbord_locatie"/>
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="fill_horizontal"
            android:text="10.3 Kilometer"
            android:layout_marginTop="5dp"
            android:id="@+id/prikbord_afstand"/>
    </LinearLayout>
    <ImageView
        android:layout_weight="0.01"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_gravity="center"
        android:id="@+id/statusImageDeclined"
        android:src="@drawable/denied_light"/>
    <ImageView
        android:layout_weight="0.01"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_gravity="center"
        android:id="@+id/statusImageAccepted"
        android:src="@drawable/check_light"/>

</LinearLayout>